<%= link_to "<戻る", meeting_rooms_path %>
<h1><%= @meeting_room.name %></h1>
<%= @meeting_room.meeting_id %>

<% @meeting_room.chats.each do |chat| %>
  <div>
    <%= chat.content %>
    <% if chat.is_disclosed %>
      <%= chat.user.name %>
    <% end %>
    <%= form_with model: chat, local: true do |f| %>
      <%= f.submit "名前を見る" %>
    <% end %>
  </div>
<% end %>

<%= form_with model: @new_chat, local: true do |f| %>
  <%= f.text_field :content %>

  <%= f.submit "投稿"%>
<% end %>