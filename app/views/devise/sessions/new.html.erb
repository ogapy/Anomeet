<div class="background">
  <div class="auth-background">
    <h2 class="auth-title text-center">Anomeetにログイン</h2>
    <%= form_with model: @user, url: session_path(resource_name), local: true do |f| %>
      <div class="field">
        <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "Email", class: "form" %>
      </div>

      <div class="field">
        <%= f.password_field :password, autocomplete: "current-password", placeholder: "Password", class: "form" %>
      </div>

      <div class="actions">
        <%= f.submit "Log in", class: "authenticate-btn" %>
      </div>
    <% end %>
  </div>
</div>

